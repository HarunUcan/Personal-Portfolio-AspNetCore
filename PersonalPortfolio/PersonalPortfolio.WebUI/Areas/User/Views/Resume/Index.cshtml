@{
    ViewData["Title"] = "Resume";
    ViewData["ActivePage"] = "Resume";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<!-- Resume Section -->
<section id="resume" class="resume section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Özgeçmiş</h2>
    </div><!-- End Section Title -->
    <!-- Download Link (centered, outlined, no hover) -->
    <div class="container mb-4 text-center" data-aos="fade-up">
        <a href="https://localhost:7121/api/resumes/get-resume-file" download
           class="text-decoration-none d-inline-flex align-items-center gap-2"
           style="padding: 10px 20px; border: 1px solid #0d6efd; border-radius: 6px; background-color: transparent; color: #0d6efd; transition: none;">
            <i class="bi bi-download"></i>
            Özgeçmişi indir
        </a>
    </div>

    <div class="container">
        <div class="row">
            <iframe src="https://localhost:7121/api/resumes/get-resume-file" width="100%" height="800px" style="border: none;"></iframe>
        </div>
    </div>

</section><!-- /Resume Section -->
