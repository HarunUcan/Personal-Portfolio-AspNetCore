@model PersonalPortfolio.WebUI.Areas.Admin.Dtos.HomeDtos.ResultHomeDto
@{
    ViewData["Title"] = "Anasayfa";
    ViewData["ActivePage"] = "Home";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-semibold text-gray-700 mb-8">Anasayfa</h1>

    <!-- Form -->
    <div class="bg-gray-50 p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-700 mb-6">Anasayfa</h2>
        <form method="post" action="/admin/home/update" enctype="multipart/form-data">
            
            <div class="mb-6">
                <label for="name" class="block text-sm font-medium text-gray-600">İsim</label>
                <input type="text" name="name" id="name" placeholder="John" value="@Model.Name"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="lastname" class="block text-sm font-medium text-gray-600">Soyisim</label>
                <input type="text" name="lastname" id="lastname" placeholder="Doe" value="@Model.LastName"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="description" class="block text-sm font-medium text-gray-600">Title</label>
                <input type="text" name="description" id="description" placeholder="Bilgisayar Mühendisi" value="@Model.Description"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <!-- Profil Resmi -->
            <div class="mb-6">
                <label for="bgImage" class="block text-sm font-medium text-gray-600">Arkaplan Resmi</label>
                <div class="w-full h-40 flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-lg bg-gray-50 p-4 cursor-pointer"
                     onclick="document.getElementById('bgImage').click()">
                    <input type="file" id="bgImage" name="bgImage" accept="image/*" class="hidden"
                           onchange="previewImage(this, 'mainImagePreview')">
                    <img id="mainImagePreview" class="hidden w-32 h-32 object-cover rounded-lg">
                    <span id="imageLabel" class="text-gray-500 text-sm">Resim Ekle</span>
                </div>
            </div>

            <div class="flex justify-end">
                <button type="submit"
                        class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-white">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function previewImage(input, previewId) {
        const preview = document.getElementById(previewId);
        const label = document.getElementById('imageLabel');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.classList.remove('hidden');
                label.classList.add('hidden');
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
