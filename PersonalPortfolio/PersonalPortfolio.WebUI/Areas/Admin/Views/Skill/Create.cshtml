@model PersonalPortfolio.WebUI.Areas.Admin.Dtos.SkillDtos.CreateSkillDto
@{
    ViewData["Title"] = "Skill Ekle";
    ViewData["ActivePage"] = "Skill-Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-semibold text-gray-700 mb-8">Skill Ekle</h1>

    <!-- Form -->
    <div class="bg-gray-50 p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-700 mb-6">Skill Ekle</h2>
        <form method="post" asp-area="Admin" asp-controller="Skill" asp-action="Create" enctype="multipart/form-data">

            <div class="mb-6">
                <label for="name" class="block text-sm font-medium text-gray-600">Başlık</label>
                <input type="text" asp-for="Name" id="name" placeholder="Asp.Net Core, Pyhton..."
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="percentage" class="block text-sm font-medium text-gray-600">Yüzdelik</label>
                <input type="number" asp-for="Percentage" id="percentage" placeholder="85"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>


            <div class="flex justify-end">
                <button type="submit"
                        class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-white">
                    Ekle
                </button>
            </div>
        </form>
    </div>
</div>
