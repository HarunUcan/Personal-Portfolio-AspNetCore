@model PersonalPortfolio.WebUI.Areas.Admin.Dtos.AboutDtos.ResultAboutDto
@{
    ViewData["Title"] = "Hakkımda";
    ViewData["ActivePage"] = "About";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="max-w-7xl mx-auto">
    <h1 class="text-3xl font-semibold text-gray-700 mb-8">Hakkımda</h1>

    <!-- Form -->
    <div class="bg-gray-50 p-8 rounded-lg shadow-md">
        <h2 class="text-xl font-semibold text-gray-700 mb-6">Hakkımda</h2>
        <form method="post" action="/admin/about/update" enctype="multipart/form-data">
            <div class="mb-6">
                <label for="title" class="block text-sm font-medium text-gray-600">Title</label>
                <input type="text" name="title" id="title" placeholder="Backend Developer" value="@Model.Title"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="desc1" class="block text-sm font-medium text-gray-600">Açıklama</label>
                <input type="text" name="desc1" id="desc1" placeholder="Açıklama..." value="@Model.Description1"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="birthday" class="block text-sm font-medium text-gray-600">Doğum Tarihi</label>
                <input type="date" name="birthday" id="birthday" value="@Model.Birthday"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="websiteUrl" class="block text-sm font-medium text-gray-600">Website Adresi</label>
                <input type="text" name="websiteUrl" id="website-url" placeholder="ornek.com" value="@Model.WebsiteUrl"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="phone" class="block text-sm font-medium text-gray-600">Telefon Numarası</label>
                <input type="text" name="phone" id="phone" placeholder="+90 555 555 55 55" value="@Model.Phone"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="location" class="block text-sm font-medium text-gray-600">Lokasyon</label>
                <input type="text" name="location" id="location" placeholder="Esenler/İstanbul" value="@Model.Location"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="degree" class="block text-sm font-medium text-gray-600">Diploma Derecesi</label>
                <input type="text" name="degree" id="degree" placeholder="Lisans-Bilgisayar Mühendisliği" value="@Model.Degree"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="email" class="block text-sm font-medium text-gray-600">Mail Adresi</label>
                <input type="email" name="email" id="mail" placeholder="ornek@ornek.com" value="@Model.Email"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>

            <div class="mb-6">
                <label for="freelance" class="block text-sm font-medium text-gray-600">Freelancer</label>
                <input type="text" name="freelance" id="freelance" placeholder="Bionluk" value="@Model.Freelance"
                       class="mt-2 block w-full rounded-lg border border-gray-300 shadow-sm px-4 py-2 text-gray-700 bg-gray-50 focus:ring-indigo-500 focus:border-indigo-500">
            </div>


            <!-- Profil Resmi -->
            <div class="mb-6">
                <label for="profileImage" class="block text-sm font-medium text-gray-600">Profil Resmi</label>
                <div class="w-full h-40 flex flex-col items-center justify-center border-2 border-dashed border-gray-300 rounded-lg bg-gray-50 p-4 cursor-pointer"
                     onclick="document.getElementById('profileImage').click()">
                    <input type="file" id="profileImage" name="profileImage" accept="image/*" class="hidden"
                           onchange="previewImage(this, 'mainImagePreview')">
                    <img id="mainImagePreview" class="hidden w-32 h-32 object-cover rounded-lg">
                    <span id="imageLabel" class="text-gray-500 text-sm">Resim Ekle</span>
                </div>
            </div>

            <div class="flex justify-end">
                <button type="submit"
                        class="px-6 py-2 text-white bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow focus:outline-none focus:ring-2 focus:ring-white">
                    Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function previewImage(input, previewId) {
        const preview = document.getElementById(previewId);
        const label = document.getElementById('imageLabel');

        if (input.files && input.files[0]) {
            const reader = new FileReader();
            reader.onload = function (e) {
                preview.src = e.target.result;
                preview.classList.remove('hidden');
                label.classList.add('hidden');
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
