@model PersonalPortfolio.WebUI.Areas.Admin.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Index";
    ViewData["ActivePage"] = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
